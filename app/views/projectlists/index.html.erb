  <ul class="navbar-nav mr-auto">
    <li class="nav-item active">
      <a class="nav-link" href="/projectlists">Projects portal</a>
    </li>
    <% if !user_signed_in? %>
    <li class="nav-item">
      <a class="nav-link" href="/users/sign_in">Sign in</a>
