<% provide(:description, @projectlist.description) %>
<center>
<br>
<div class="card text-white bg-dark mb-3" style="max-width: 90rem;">
  <div class="card-header">Project author: <%= @projectlist.name %></div>
  <div class="card-body">
    <p class="card-text">
    <table class="table table-dark">
  <thead>
    <tr>
      <th scope="col">Language</th>
      <th scope="col">Description</th>
      <th scope="col">Status</th>
      <th scope="col">RepoURL</th>
    </tr>
  </thead>
  <tbody>
    <tr>
      <th scope="row"><%= @projectlist.language %></th>
      <td><%= @projectlist.description %></td>
      <td><%= @projectlist.status %></td>
      <td><%= @projectlist.RepoURL %></td>
    </tr>
  </tbody>
</table>
    </p>
  </div>
</div>
</center>

